<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Here to Get Updates About Admission"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:id="@+id/titletv"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_weight="0.09" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_firstname"
        android:hint="Enter First Name "
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_lastname"
        android:layout_margin="10dp"
        android:hint="Enter Last Name "/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_emailid"
        android:hint="Enter Email ID"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register for Newsletter"
        android:background="#21a3ed"
        android:id="@+id/register_newsletter"
        ></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:textColor="#3592fc"
            />


</LinearLayout>